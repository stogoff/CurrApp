#:import MDLabel kivymd.uix.label.MDLabel
#:import MDTextField kivymd.uix.textfield.MDTextField
#:import MDRaisedButton kivymd.uix.button.MDRaisedButton
#:import MDDropdownMenu kivymd.uix.menu.MDDropdownMenu
#:import MDFillRoundFlatButton kivymd.uix.button.MDFillRoundFlatButton
#:import SingleIconItem lists.SingleIconItem

<ItemLabel@MDLabel>
    font_size: '25sp'
    halign: 'left'
    valign: 'middle'
    text_size: self.size
<LabelSection@Label>:
    markup: True
    bold: True
    font_size: '16sp'
    color: 0, 0, 0, 1
    size_hint_y: None
    height: dp(45)
<RaisedButton>
    md_bg_color: root.theme_cls.primary_color
    theme_text_color: 'Custom'
    text_color: root.specific_text_color
    elevation_normal: 10
    size_hint: 1, 1

<RaisedIconButton>
    MDIcon:
        id: lbl_ic
        icon: root.icon
        theme_text_color: 'Custom'
        text_color: [1,1,1,1]
        size_hint_x: None
        width: self.texture_size[0]

<RateLabel@MDLabel>
    halign: 'center'
    valign: 'middle'
    text_size: self.size

<NumButton@RaisedButton>
    font_size: '20sp'

<CurSpinner@Spinner>
    font_size: '20sp'
    size_hint: [.31,1]
    values:'USD','EUR','GBP','RUB','CHF','CAD','JPY','BTC'
    background_normal: ''
    background_color: app.theme_cls.primary_color

<Calculator>
    amount1:amount1
    amount2:amount2
    curr1:curr1
    curr2:curr2
    timelabel:timelabel
    rate1:rate1
    rate2:rate2
    toolbar:toolbar

    nav_drawer:nav_drawer

    MDToolbar:
        id: toolbar
        background_color: app.theme_cls.primary_color
        title: app.title
        left_action_items: [['menu', lambda x: nav_drawer.toggle_nav_drawer()]]
        elevation: 10
        md_bg_color: app.theme_cls.primary_color
        pos_hint: {"top": 1}

    ScreenManager:
        id:s_manager
        size_hint_y: None
        height: root.height - toolbar.height

        Screen:
            id:main_screen
            name: 'main'

            GridLayout:
                rows: 5


                AnchorLayout:
                    size_hint: [.9,.05]

                    MDLabel:
                        id:timelabel
                        text: '111'
                        halign: 'center'
                BoxLayout:
                    size_hint: [.9,.2]
                    padding: [30,30,30,0]
                    spacing:20
                    ItemLabel:
                        id:amount1
                        text:'0'
                        halign: 'right'
                    CurSpinner:
                        id:curr1
                        text:'USD'
                        on_text:
                            root.calculate()
                BoxLayout:
                    size_hint: [.9,.1]
                    padding: [30,0,30,0]
                    spacing: 1
                    ItemLabel:
                        text:'='
                        halign: 'right'
                    MDIconButton:
                        size_hint: [.31,1]
                        icon: 'arrow-up-down-bold-outline'
                        halign: 'center'
                        on_release:
                            root.swap_currencies()
                BoxLayout:
                    size_hint: [.9,.2]
                    padding: [30,0,30,30]
                    spacing:20
                    ItemLabel:
                        id:amount2
                        text:'0'
                        halign: 'right'
                    CurSpinner:
                        id:curr2
                        text:'RUB'
                        on_text:
                            root.calculate()
                GridLayout:
                    padding: 30
                    cols: 4
                    rows: 5
                    spacing:20
                    RateLabel:
                        id:rate1
                    RateLabel:
                        id:rate2
                    NumButton:
                        text: 'C'
                        on_release:
                            root.input('C')
                    RaisedIconButton:
                        icon: 'backspace'
                        on_release:
                            root.input('B')

                    NumButton:
                        text: '7'
                        on_release:
                            root.input(7)
                    NumButton:
                        text: '8'
                        on_release:
                            root.input(8)
                    NumButton:
                        text: '9'
                        on_release:
                            root.input(9)
                    NumButton:
                        text: '*'
                        on_release:
                            root.input('*')

                    NumButton:
                        text: '4'
                        on_release:
                            root.input(4)
                    NumButton:
                        text: '5'
                        on_release:
                            root.input(5)
                    NumButton:
                        text: '6'
                        on_release:
                            root.input(6)
                    NumButton:
                        text: '/'
                        on_release:
                            root.input('/')

                    NumButton:
                        text: '1'
                        on_release:
                            root.input(1)
                    NumButton:
                        text: '2'
                        on_release:
                            root.input(2)
                    NumButton:
                        text: '3'
                        on_release:
                            root.input(3)
                    NumButton:
                        text: '+'
                        on_release:
                            root.input('+')

                    NumButton:
                        text: '0'
                        on_release:
                            root.input(0)
                    NumButton:
                        text: '.'
                        on_release:
                            root.input('.')
                    NumButton:
                        text: '='
                        on_release:
                            root.input('=')
                    NumButton:
                        text: '-'
                        on_release:
                            root.input('-')

        Screen:
            id: about
            name: 'about'

            FloatLayout:

                Image:
                    source: 'data/forex.png'
                    opacity: .3

                BoxLayout:
                    id: box
                    orientation: 'vertical'
                    padding: dp(0), dp(10)

                    Widget:
                    Widget:

                    Label:
                        id: about_label
                        font_size: '14sp'
                        bold: True
                        color: 0, 0, 0, 1
                        markup: True
                        halign: 'center'
                        on_ref_press: root.open_url(*args)

                    Widget:
                    Widget:

    MDNavigationDrawer:
        id: nav_drawer
        ContentNavigationDrawer:
            orientation:'vertical'
            BoxLayout:
                id: box_logo
                orientation:'vertical'
                padding: dp(10)
                spacing: dp(10)
                size_hint_y:.3
                height: dp(45)
                canvas:
                    Color:
                        rgba: app.theme_cls.primary_color
                    Rectangle:
                        pos: self.pos
                        size: self.size

                Image:
                    id: navigation_image
                    size_hint: None, None
                    size: dp((box_logo.height * 15) // 100), dp((box_logo.height * 15) // 100)
                    source: 'data/forex.png'

                Widget:

                Label:
                    id: user_name
                    size_hint: None, None
                    height: dp(20)
                    width: self.texture_size[0]
                    halign: 'left'
                    text: '[b]%s[/b]\n%s\n' % (app.title,app.version)
                    markup: True
                    font_size: '14sp'
            ScrollView:
                id:scroll
                size_hint_y:.7

                GridLayout:
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: dp(10)

                    LabelSection:
                        text:  'Menu:'
                        events_callback: lambda x: x

                    SingleIconItem:
                        icon: 'web'
                        text: 'Language'

                        events_callback: app.select_locale

                    SingleIconItem:
                        icon: 'language-python'
                        text: 'License'
                        events_callback: app.show_license

                    SingleIconItem:
                        icon: 'information'
                        text: 'About'
                        font_size: '24sp'
                        events_callback: app.show_about
